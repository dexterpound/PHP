	<?php
	
	function paint($room="office",$color="green",$fantastic="trippy") {
		return "The color of the {$room} is {$color} and {$fantastic}.<br />";
	}
	
	echo paint();
	echo paint("bedroom", "blue");
	echo paint("bedroom");
	
	
	?>

	



